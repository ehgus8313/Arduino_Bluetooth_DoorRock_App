<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".BTconectActivity">

    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:visibility="gone"
        android:paddingTop="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="4"
                android:gravity="center"
                android:background="@drawable/border"
                android:textSize="50dp"
                android:textStyle="bold"
                android:id="@+id/dial"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button5"
                android:background="@drawable/number1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/button6"
                android:background="@drawable/number2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/button7"
                android:background="@drawable/number3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_margin="10dp"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button8"
                android:background="@drawable/number4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/button9"
                android:background="@drawable/number5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_margin="10dp"  />

            <Button
                android:id="@+id/button10"
                android:background="@drawable/number6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_margin="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button11"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/number7"
                android:layout_weight="1"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/button12"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/number8"
                android:layout_weight="1"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/button13"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/number9"
                android:layout_weight="1"
                android:layout_margin="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button14"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/numberr"
                android:layout_weight="1"
                android:layout_margin="10dp"  />

            <Button
                android:id="@+id/button15"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/number0"
                android:layout_weight="1"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/button16"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/numberl"
                android:layout_weight="1"
                android:layout_margin="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/close"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/close"
                android:layout_margin="10dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#CFDBD5"
        android:gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="블루투스 연결 상태 : "
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/bluetoothdc"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/bluetoothdc" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="35dp"
        android:paddingBottom="35dp"
        android:gravity="center">

        <TextView
            android:id="@+id/doorlockname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도어락 장소"
            android:textStyle="bold"
            android:textSize="30dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/hidelay2"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/mainback"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/onoff"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/onoff" />

        <ImageView
            android:id="@+id/off"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/onoff" />

        <TextView
            android:id="@+id/onofftext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/hidelay1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

        <ImageButton
            android:id="@+id/BTconnect"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/bluetoo" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="블루투스"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

        <ImageButton
            android:id="@+id/editbutton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/numberpad" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="비밀번호 직접입력"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="내 정보"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
